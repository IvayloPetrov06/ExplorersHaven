@model Explorers_Haven.Models.Activity
<form method="post">
    <div class="row">
        <div class="mb-3">
            <label asp-for="Name">Име</label>
            <input asp-for="Name">
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TripId">Събитие</label>
            <select asp-for="TripId" asp-items="ViewBag.Trips" class="form-control">
                <span asp-validation-for="TripId" class="alert-danger"></span>
                <option value="">Изберете събитие</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="mb-3">
            <button type="submit">Въведи</button>
        </div>
    </div>
</form>
