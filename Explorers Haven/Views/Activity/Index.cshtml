@using Explorers_Haven.ViewModels.Activity
@model ActivityViewModel
<div class="text-center">
    <h1 class="display-4">Престои</h1>
    <p>Толкова много възможности!</p>
</div>

<h2>Търсете събития</h2>
<form asp-action="Index" method="get" class="mb-4">

    <div class="form-group">
        <label for="Name">Име</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Покажи</button>

</form>


<h2>Всички налични събития</h2>
<table class="table tabl-striped">
    <thead>
        <tr>
            <th>Име</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Activities.Count > 0)
        {
            @foreach (var travelogue in Model.Activities)
            {
                <tr>
                    <td>@travelogue.Name</td>
                </tr>
            }
        }
    </tbody>

</table>
