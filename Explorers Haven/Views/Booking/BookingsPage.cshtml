@using Explorers_Haven.ViewModels.Booking
@model BookingFilterViewModel

<!-- Main Container -->
<div class="trivago-container">
    <!-- Hero Search Section -->
    <div class="hero-section">
        <div class="search-wrapper">
            <h1 class="main-heading">Find your ideal hotel and compare prices from different websites</h1>

            <div class="search-box">
                <form>
                    <div class="search-input-wrapper">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" asp-for="Search" class="search-input" placeholder="Where would you like to go?">
                        <button type="submit" class="search-button">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Results Section -->
    <div class="results-section">
        <div class="results-header">
            <h2 class="section-title">Your Bookings</h2>
            <div class="filters">
                <span class="filter-label">Sort by:</span>
                <select class="filter-dropdown">
                    <option>Our recommendations</option>
                    <option>Price (lowest first)</option>
                    <option>Rating (highest first)</option>
                </select>
            </div>
        </div>

        <!-- Offers Grid -->
        <div class="offers-grid">
            @foreach (var offer in Model.Bookings)
            {
                <div class="offer-card">
                    <div class="offer-image">
                        <img src="@offer.OfferCoverImage" alt="@offer.OfferName">
                    </div>
                    <div class="offer-details">
                        <div class="offer-info">
                            <h3 class="offer-name">@offer.OfferName</h3>
                            <div class="offer-metadata">
                                <span class="people-count"><i class="fas fa-user"></i> @offer.PeopleCount.Value.ToString("0") people</span>
                                <span class="date"><i class="fas fa-calendar"></i> @offer.StartDate</span>
                                @if (offer.YoungOldPeopleCount > 0)
                                {
                                    <span class="children-count"><i class="fas fa-child"></i> @offer.YoungOldPeopleCount.Value.ToString("0") children/seniors</span>
                                }
                                <div class="travel-section">
                                    <h2 class="section-title">Travel Details</h2>
                                    
                                    @foreach (var a in offer.Travels)
                                    {
                                        <div class="travel-card">
                                            <div class="travel-point">
                                                <div class="travel-location">@a.Start</div>
                                                <div class="travel-location">@a.DateStart</div>
                                            </div>
                                            @foreach (var tr in Model.Transports)
                                            {
                                                if (@a.TransportId == tr.Id && tr.Name == "Plane")
                                                {
                                                    <div class="travel-transport">@tr.Name</div>
                                                    <div class="travel-icon">

                                                        <img src="/Images/Plane.svg" alt="Plane" />
                                                    </div>
                                                }
                                                if (@a.TransportId == tr.Id && tr.Name == "Train")
                                                {
                                                    <div class="travel-icon">
                                                        <div class="travel-transport">@tr.Name</div>
                                                        <img src="/Images/Train.svg" alt="Train" />
                                                    </div>
                                                }
                                                if (@a.TransportId == tr.Id && tr.Name == "Boat")
                                                {
                                                    <div class="travel-icon">
                                                        <div class="travel-transport">@tr.Name</div>
                                                        <img src="/Images/boat.svg" alt="boat" />
                                                    </div>
                                                }
                                                if (@a.TransportId == tr.Id && tr.Name == "Custom")
                                                {
                                                    <div class="travel-icon">
                                                        <div class="travel-transport">@tr.Name</div>
                                                        <img src="/Images/custom.svg" alt="custom" />
                                                    </div>
                                                }
                                            }


                                            <div class="travel-point">
                                                <div class="travel-location">@a.Finish</div>
                                                <div class="travel-location">@a.DateFinish</div>
                                            </div>

                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="offer-actions">
                            <div class="price-tag">
                                @*<span class="price-label">Hotel bill</span>
                            <span class="price-value">@offer.PeopleCount people - @offer.DurationDays - @offer.StayPrice лв</span>*@
                                <span class="price-label">Price</span>
                                <span class="price-value">@offer.Price лв</span>
                            </div>
                            <div class="action-buttons">
                                <a href="/Booking/Cancel/@offer.Id" class="btn-cancel">Cancel</a>
                                <a href="/Home/OfferPage/@offer.Id" class="btn-view">View Deal</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

