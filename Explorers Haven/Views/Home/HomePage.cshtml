@using Explorers_Haven.Models
@model IEnumerable<Offer>

<partial name="_Notification"></partial>

<div class="container">
    <div class="row">
        <div class="col col-md-6">
            <h3>Оферти</h3>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">ИД</th>
            <th scope="col">Име</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var offer in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@offer.Id</td>
                <td>@offer.Name</td>
                <td>@offer.Price</td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* Container styles */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Row styles */
    .row {
        margin-bottom: 20px;
    }

    /* Heading styles */
    h3 {
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    /* Table styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-family: Arial, sans-serif;
    }

        /* Table header styles */
        .table thead tr {
            background-color: #f8f9fa;
            text-align: left;
            font-weight: bold;
        }

        .table th {
            padding: 12px;
            border: 1px solid #ddd;
        }

        /* Table row styles */
        .table tbody tr {
            border-bottom: 1px solid #ddd;
        }

        .table td, .table th {
            padding: 12px;
            border: 1px solid #ddd;
        }
</style>
