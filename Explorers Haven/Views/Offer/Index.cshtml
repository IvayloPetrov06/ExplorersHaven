@model OfferViewModel
<div class="text-center">
    <h1 class="display-4">Оферти</h1>
    <p>Избирайте от хиляди оферти!</p>
</div>

<h2>Търсете оферти</h2>
<form asp-action="Index" method="get" class="mb-4">

    <!--<div class="form-group">
        <label for="Id">Id</label>
        <input type="text" asp-for="Id" class="form-control" />
        <select asp-for="Id" asp-items="Model.Offers" class="form-control">
            <option value="">All Ids</option>
        </select>
    </div>-->

    <div class="form-group">
        <label for="Name">Име</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="MinPrice">Минимална цена</label>
        <input type="number" asp-for="MinPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label for="MaxPrice">максимална цена</label>
        <input type="number" asp-for="MaxPrice" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Покажи</button>

</form>


<h2>Всички налични оферти</h2>
<table class="table tabl-striped">
    <thead>
        <tr>
            <th>ИД</th>
            <th>Име</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Offers.Count > 0)
        {
            @foreach (var offer in Model.Offers)
            {
                <tr>
                    <td>@offer.Id</td>
                    <td>@offer.Name</td>
                    <td>@offer.Price</td>
                </tr>
            }
        }
    </tbody>

</table>
