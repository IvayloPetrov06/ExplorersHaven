@using Explorers_Haven.ViewModels.Offer
@model OfferFilterViewModel
<div class="albums-header">
    <h1 class="albums-title">oferti</h1>
    <form>
        <div class="search-container">
            <input type="text" asp-for="Search" class="search-bar" placeholder="Търси oferti...">
            <button class="search-btn">
                <i class="fas fa-search"></i> <!-- Search icon with i tag -->
            </button>
        </div>
    </form>
    <a asp-controller="Offer" asp-action="AddOffer" class="add-album-btn">Добави oferta</a>
</div>

<div class="albums-container">
    <h2 class="page-title">Offers</h2>
    <div class="albums-grid">
        @foreach (var offer in Model.Offers)
        {
            <div class="album-card">
                <div class="album-cover">
                    <img src="@offer.CoverImage" alt="@offer.Name">
                    <div class="play-overlay">
                        <button class="play-button"><i class="fas fa-play"></i></button>
                    </div>
                </div>
                <div class="album-info">
                    <h3 class="album-title">@offer.Name</h3>
                </div>
                <div class="card-buttons">
                    <a asp-controller="Offer" asp-action="EditOffer" asp-route-id="@offer.Id" class="edit-btn">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-controller="Offer" asp-action="Delete" asp-route-id="@offer.Id" class="delete-btn">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    .albums-container {
        padding: 20px;
        color: white;
        background: #121212;
    }

    .page-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .albums-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 20px;
    }

    .album-card {
        background: #181818;
        border-radius: 10px;
        padding: 15px;
        transition: transform 0.2s, background 0.2s;
        position: relative;
    }

        .album-card:hover {
            background: #282828;
            transform: scale(1.05);
        }

    .album-cover {
        position: relative;
        overflow: hidden;
        border-radius: 8px;
    }

        .album-cover img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            display: block;
        }

    .play-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background: rgba(0, 0, 0, 0.6);
        opacity: 0;
        transition: opacity 0.2s;
    }

    .album-card:hover .play-overlay {
        opacity: 1;
    }

    .play-button {
        background: #1db954;
        border: none;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 20px;
        color: white;
        cursor: pointer;
        transition: background 0.2s;
    }

        .play-button:hover {
            background: #1ed760;
        }

    .album-info {
        text-align: center;
        margin-top: 10px;
    }

    .album-title {
        font-size: 16px;
        font-weight: bold;
    }

    .album-artist {
        font-size: 14px;
        color: #b3b3b3;
    }

    .albums-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        margin-bottom: 30px;
        padding: 0 20px;
    }

    .albums-title {
        font-size: 36px;
        font-weight: bold;
        color: #fff;
    }

    .search-container {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .search-bar {
        padding: 12px 20px;
        font-size: 18px;
        border-radius: 30px; /* More rounded corners */
        border: none;
        width: 320px; /* Increased width */
        background-color: #333;
        color: #fff;
        text-align: left;
        outline: none;
        transition: background 0.3s;
    }

        .search-bar::placeholder {
            color: #bbb;
        }

        .search-bar:focus {
            background-color: #444;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5); /* Subtle glow effect */
        }

    .search-btn {
        background-color: transparent;
        border: none;
        color: white;
        font-size: 18px;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

        .search-btn i {
            font-size: 22px;
        }

        .search-btn:hover i {
            color: #4CAF50; /* Green glow on icon */
            transform: scale(1.1);
        }

    .add-album-btn {
        background-color: #1DB954;
        color: white;
        border: none;
        padding: 12px 18px;
        font-size: 18px;
        border-radius: 8px; /* Slightly curved corners */
        cursor: pointer;
        transition: background 0.3s;
    }

        .add-album-btn:hover {
            background-color: #1aa34a;
        }

    .card-buttons {
        position: absolute;
        bottom: 10px;
        left: 10px;
        right: 10px;
        display: flex;
        justify-content: space-between;
    }

    .edit-btn,
    .delete-btn {
        background: none;
        border: none;
        color: #bbb;
        font-size: 20px;
        cursor: pointer;
        transition: color 0.3s;
    }

        .edit-btn:hover,
        .delete-btn:hover {
            color: #1db954; /* Green color for edit button */
        }

        .delete-btn:hover {
            color: #f44336; /* Red color for delete button */
        }

        .edit-btn i,
        .delete-btn i {
            transition: transform 0.2s;
        }

        .edit-btn:hover i,
        .delete-btn:hover i {
            transform: scale(1.2); /* Slight grow effect for the icons */
        }
</style>
