<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Explorers_Haven</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Explorers_Haven.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js">​</script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>​
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="HomePage">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* @if (User.IsInRole(SD.AdminRole)) *@
                        @*if (User.IsInRole("Admin"))*@
                        @*{ *@
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                               Content Management
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">​
                                 <a class="dropdown-item" href="@Url.Action("Index", "Offer")">Филтрирай оферта</a>
                                 <a class="dropdown-item" href="@Url.Action("ListOffers", "Offer")">Лист оферта</a>
                                 <a class="dropdown-item" href="@Url.Action("Index", "Trip")">Филтрирай пътуване</a>
                                 <a class="dropdown-item" href="@Url.Action("ListTrips", "Trip")">Лист пътуване</a>
                                 <a class="dropdown-item" href="@Url.Action("Index", "Travel")">Филтрирай предвижване</a>
                                 <a class="dropdown-item" href="@Url.Action("ListTravels", "Travel")">Лист предвижване</a>
                                 <a class="dropdown-item" href="@Url.Action("Index", "Stay")">Филтрирай престой</a>
                                 <a class="dropdown-item" href="@Url.Action("ListStays", "Stay")">Лист престой</a>
                                 <a class="dropdown-item" href="@Url.Action("Index", "Activity")">Филтрирай дейност</a>
                                 <a class="dropdown-item" href="@Url.Action("ListActivities", "Activity")">Лист дейност</a>
                            </div> 
                        </li>
                        
                        @*}*@
                        
                    </ul>
                    <partial name="_LoginPartial"/>​
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification"></partial>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Explorers_Haven - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
