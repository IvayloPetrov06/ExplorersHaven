@model Explorers_Haven.Models.Stay
<form method="post">
    <div class="row">
        <div class="mb-3">
            <label asp-for="Name">Име</label>
            <input asp-for="Name">
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
        <h2>every trip can have only one stay</h2>
        <div class="mb-3">
            <label asp-for="TripId">Пътуване</label>
            <select asp-for="TripId" asp-items="ViewBag.Trips" class="form-control">
                <span asp-validation-for="TripId" class="alert-danger"></span>
                <option value="">Изберете пътуване</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="mb-3">
            <button type="submit">Въведи</button>
        </div>
    </div>
</form>
