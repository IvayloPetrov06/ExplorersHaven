@model TravelViewModel
<div class="text-center">
    <h1 class="display-4">Престои</h1>
    <p>Пътувания из целия свят!</p>
</div>

<h2>Търсете пътуване</h2>
<form asp-action="Index" method="get" class="mb-4">

    <div class="form-group">
        <label for="Start">Старт</label>
        <input type="text" asp-for="Start" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Finish">Финал</label>
        <input type="text" asp-for="Finish" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Transport">Транспорт</label>
        <input type="text" asp-for="Transport" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Покажи</button>

</form>


<h2>Всички налични пътувания</h2>
<table class="table tabl-striped">
    <thead>
        <tr>
            <th>Старт</th>
            <th>Финал</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Travels.Count > 0)
        {
            @foreach (var tr in Model.Travels)
            {
                <tr>
                    <td>@tr.Start</td>
                    <td>@tr.Finish</td>
                </tr>
            }
        }
    </tbody>

</table>
