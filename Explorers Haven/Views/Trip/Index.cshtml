@model TripViewModel
<div class="text-center">
    <h1 class="display-4">Trips Application</h1>
    <p>Book your Trip</p>
</div>

<h2>Search trips by name</h2>
<form asp-action="Index" method="get" class="mb-4">

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Show</button>

</form>


<h2>Trips</h2>
<table class="table tabl-striped">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Trips.Count > 0)
        {
            @foreach (var travelogue in Model.Trips)
            {
                <tr>
                    <td>@travelogue.Name</td>
                </tr>
            }
        }
    </tbody>

</table>
