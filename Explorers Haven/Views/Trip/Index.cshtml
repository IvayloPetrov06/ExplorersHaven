@model TripViewModel
<div class="text-center">
    <h1 class="display-4">Пътешествия</h1>
    <p>Резервирай ново преживяване!</p>
</div>

<h2>Търсете пътешествия</h2>
<form asp-action="Index" method="get" class="mb-4">

    <div class="form-group">
        <label for="Name">Име</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Покажи</button>

</form>


<h2>Всички налични пътешествия</h2>
<table class="table tabl-striped">
    <thead>
        <tr>
            <th>Име</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Trips.Count > 0)
        {
            @foreach (var trip in Model.Trips)
            {
                <tr>
                    <td>@trip.Name</td>
                </tr>
            }
        }
    </tbody>

</table>
