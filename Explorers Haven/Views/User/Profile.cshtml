@using Explorers_Haven.ViewModels.User
@using Explorers_Haven.Models
@model UserViewModel
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="profile-container animate__animated animate__fadeIn">
                <h2 class="profile-header">
                    <i class="bi bi-person-circle me-2"></i>Profile
                </h2>
                <div class="profile-content">
                    <div class="profile-image-wrapper text-center mb-4">
                        <img src="@Model.ProfilePicture" class="profile-pic" alt="Profile Picture">
                    </div>

                    <div class="profile-details">
                        <div class="detail-item">
                            <i class="bi bi-person me-2"></i>
                            <strong>Name:</strong> @Model.Name
                        </div>
                        <div class="detail-item">
                            <i class="bi bi-envelope me-2"></i>
                            <strong>Email:</strong> @Model.Email
                        </div>
                        <div class="detail-item">
                            <i class="bi bi-sticky me-2"></i>
                            <strong>Bio:</strong> @(Model.Bio ?? "No bio available")
                        </div>
                    </div>

                    <button class="btn btn-edit w-100 mt-3" onclick="openEditModal()">
                        <i class="bi bi-pencil-square me-2"></i>Edit Profile
                    </button>
                </div>
            </div>
        </div>
    </div>

                        </div>
<!-- Edit Modal -->
<div class="modal" id="editModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">
                    <i class="bi bi-pencil-square me-2"></i>Edit Profile
                </h2>
                <button type="button" class="btn-close" onclick="closeEditModal()"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" asp-controller="User" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="username" class="form-label">
                            <i class="bi bi-person me-2"></i>Username
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input type="text" id="username" name="Name" class="form-control" value="@Model.Name" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="bio" class="form-label">
                            <i class="bi bi-sticky me-2"></i>Bio
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-sticky"></i></span>
                            <textarea id="bio" name="Bio" class="form-control">@Model.Bio</textarea>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="ImageFile" class="form-label">
                            <i class="bi bi-image me-2"></i>Profile Picture
                        </label>
                        <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept="image/*">
                    </div>

                    <div class="hidden">
                        <input type="text" id="email" name="Email" value="@Model.Email" />
                    </div>

                    <button type="submit" class="btn btn-login w-100">
                        <i class="bi bi-save me-2"></i>Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    .profile-container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        padding: 2.5rem;
        margin-top: 3rem;
        animation: fadeIn 0.5s ease-in-out;
    }

    .profile-header {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 1.5rem;
    }

    .profile-pic {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #3498db;
    }

    .profile-details {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1rem;
    }

    .detail-item {
        margin-bottom: 1rem;
        color: #2c3e50;
    }

        .detail-item i {
            color: #3498db;
            margin-right: 0.5rem;
        }

    .btn-edit {
        background-color: #3498db;
        border: none;
        color: white;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

    .modal {
        background-color: rgba(0,0,0,0.5);
    }

    .modal-content {
        border-radius: 12px;
    }

    .modal-header {
        border-bottom: none;
    }

    .modal-title {
        color: #2c3e50;
    }

    .btn-login {
        background-color: #3498db;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Responsive adjustments profile */
    media (max-width: 768px) {
        .profile-container

    {
        padding: 1.5rem;
        margin-top: 1rem;
    }

    .profile-pic {
        width: 120px;
        height: 120px;
    }

    }</style>
<script>
    function openEditModal() {
        document.getElementById('editModal').style.display = 'block';
    }

    function closeEditModal() {
        document.getElementById('editModal').style.display = 'none';
    }
</script>