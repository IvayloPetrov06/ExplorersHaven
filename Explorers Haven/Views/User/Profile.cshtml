@using Explorers_Haven.ViewModels.User
@using Explorers_Haven.Models

@model UserViewModel

<div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="profile-image-container">
            <img src="@Model.ProfilePicture" class="profile-pic">
        </div>
        <div class="profile-info">
            <h1 class="profile-name">@Model.Name</h1>
            <p class="profile-bio">@(Model.Bio ?? "No bio available")</p>
            <p class="profile-email">@Model.Email</p>
            @*<div class="profile-stats">
                <span class="profile-followers" onclick="openFollowersModal()">
                    <strong>@(Model.Followers?.Count ?? 0)</strong> Followers
                </span>
                <span class="profile-following" onclick="openFollowingModal()">
                    <strong>@(Model.Following?.Count ?? 0)</strong> Following
                </span>
            </div>*@
            <button class="edit-profile-btn" onclick="openEditModal()">Edit Profile</button>
        </div>
    </div>
</div>

<div id="editModal" class="modal">
    <div class="modal-content">
        <span class="close-btn" onclick="closeEditModal()">&times;</span>
        <h2>Edit Profile</h2>
        <form asp-action="Update" asp-controller="User" method="post" enctype="multipart/form-data">
            <div class="input-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="Name" value="@Model.Name" required>
            </div>

            <div class="input-group">
                <label for="bio">Bio</label>
                <textarea id="bio" name="Bio">@Model.Bio</textarea>
            </div>
            <div class="hidden">
                <input type="text" id="email" name="Email" value="@Model.Email" />
            </div>
            <div class="add-track-input-group" id="fileUploadGroup">
                <label for="ImageFile" class="add-track-input-label">Profile image</label>
                <input type="file" id="ImageFile" asp-for="ImageFile" class="add-track-input-field" accept="image/*" />
            </div>

            <button type="submit" class="save-btn">Save Changes</button>
        </form>
    </div>
</div>

<!-- Followers/Following Modals -->
<div id="followersModal" class="modal">
    <div class="modal-content">
        <span class="close-btn" onclick="closeFollowersModal()">&times;</span>
        <h2>Followers</h2>
        <ul class="modal-list">
        </ul>
    </div>
</div>

<div id="followingModal" class="modal">
    <div class="modal-content">
        <span class="close-btn" onclick="closeFollowingModal()">&times;</span>
        <h2>Following</h2>
        <ul class="modal-list">
        </ul>
    </div>
</div>

<style>
    /* Trivago-inspired Color Scheme */
    :root {
        --trivago-blue: #007fad;
        --trivago-dark-blue: #003b95;
        --trivago-light-blue: #e6f2f8;
        --trivago-gray: #697379;
        --trivago-light-gray: #f5f5f5;
        --trivago-white: #ffffff;
        --trivago-accent: #00afe7;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    /* Profile Container */
    .profile-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 30px;
        background-color: var(--trivago-white);
        border-radius: 8px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 30px;
    }

    .profile-image-container {
        flex-shrink: 0;
    }

    .profile-pic {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid var(--trivago-blue);
    }

    .profile-info {
        flex: 1;
    }

    .profile-name {
        font-size: 28px;
        font-weight: 600;
        color: var(--trivago-dark-blue);
        margin-bottom: 5px;
    }

    .profile-bio {
        font-size: 16px;
        color: var(--trivago-gray);
        margin-bottom: 12px;
        line-height: 1.4;
    }

    .profile-email {
        font-size: 15px;
        color: var(--trivago-gray);
        margin-bottom: 18px;
    }

    .profile-stats {
        display: flex;
        gap: 20px;
        margin-top: 15px;
    }

        .profile-stats span {
            cursor: pointer;
            font-size: 15px;
            color: var(--trivago-blue);
            transition: color 0.2s;
        }

            .profile-stats span:hover {
                color: var(--trivago-accent);
                text-decoration: underline;
            }

    .edit-profile-btn {
        background: var(--trivago-blue);
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        border-radius: 4px;
        font-size: 15px;
        font-weight: 500;
        transition: background 0.2s;
    }

        .edit-profile-btn:hover {
            background: var(--trivago-accent);
        }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content {
        background-color: var(--trivago-white);
        padding: 30px;
        border-radius: 8px;
        width: 450px;
        color: var(--trivago-gray);
        text-align: center;
        position: relative;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }

    .close-btn {
        position: absolute;
        top: 15px;
        right: 20px;
        font-size: 24px;
        cursor: pointer;
        color: var(--trivago-gray);
        transition: color 0.2s;
    }

        .close-btn:hover {
            color: var(--trivago-blue);
        }

    h2 {
        color: var(--trivago-dark-blue);
        font-weight: 600;
        margin-bottom: 25px;
    }

    .input-group {
        text-align: left;
        margin-bottom: 20px;
    }

        .input-group label {
            font-size: 14px;
            color: var(--trivago-gray);
            display: block;
            margin-bottom: 6px;
            font-weight: 500;
        }

        .input-group input,
        .input-group textarea,
        .add-track-input-field {
            width: 100%;
            padding: 12px;
            background-color: var(--trivago-white);
            border: 1px solid #d9dce0;
            border-radius: 4px;
            color: #333;
            font-size: 14px;
            box-sizing: border-box;
        }

            .input-group input:focus,
            .input-group textarea:focus,
            .add-track-input-field:focus {
                border-color: var(--trivago-blue);
                outline: none;
            }

        .input-group textarea {
            min-height: 100px;
            resize: vertical;
        }

    .hidden {
        display: none;
    }

    .add-track-input-label {
        font-size: 14px;
        color: var(--trivago-gray);
        display: block;
        margin-bottom: 6px;
        font-weight: 500;
        text-align: left;
    }

    .save-btn {
        background: var(--trivago-blue);
        color: white;
        padding: 12px;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 4px;
        font-size: 16px;
        transition: background 0.2s;
        font-weight: 500;
        margin-top: 10px;
    }

        .save-btn:hover {
            background: var(--trivago-accent);
        }

    /* Modal List */
    .modal-list {
        list-style: none;
        padding: 0;
        text-align: left;
    }

        .modal-list li {
            padding: 12px 10px;
            border-bottom: 1px solid #eaeaea;
            color: var(--trivago-dark-blue);
            transition: background-color 0.2s;
        }

            .modal-list li:hover {
                background-color: var(--trivago-light-blue);
            }

            .modal-list li:last-child {
                border-bottom: none;
            }

    /* Responsive adjustments */
    media (max-width: 768px) {
        .profile-header

    {
        flex-direction: column;
        text-align: center;
    }

    .profile-container {
        padding: 20px;
        margin: 20px;
    }

    .modal-content {
        width: 90%;
        max-width: 450px;
    }

    }
</style>

<script>
    function openEditModal() {
        document.getElementById('editModal').style.display = 'flex';
    }
    function closeEditModal() {
        document.getElementById('editModal').style.display = 'none';
    }

    function openFollowersModal() {
        document.getElementById('followersModal').style.display = 'flex';
    }
    function closeFollowersModal() {
        document.getElementById('followersModal').style.display = 'none';
    }

    function openFollowingModal() {
        document.getElementById('followingModal').style.display = 'flex';
    }
    function closeFollowingModal() {
        document.getElementById('followingModal').style.display = 'none';
    }
</script>