@using Explorers_Haven.Models
@using Explorers_Haven.ViewModels.User
@model UserViewModel

<h1>Update User</h1>

<form method="post">
    <input type="text" placeholder="Username" asp-for="Name" />
    <br />
    <input type="text" placeholder="Email" asp-for="Email" />
    <br />
    <input type="text" placeholder="Password" asp-for="Password" />
    <br />
    <input type="text" placeholder="Bio" asp-for="Bio" />
    <br />
    <input type="text" placeholder="PFP" asp-for="ProfilePicture" />
    <br />
    <button type="submit">Submit</button>
</form>
